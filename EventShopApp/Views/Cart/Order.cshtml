@model EventShopApp.ViewModels.OrderViewModel

<h2>Order Form</h2>

<form asp-action="SubmitOrder" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Surname</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Deadline Date</label>
        <input type="date" asp-for="DeadLineDate" class="form-control" required />
    </div>
   
    <button type="submit" class="btn btn-primary">Order</button>
    <a asp-action="Index" class="btn btn-secondary">Close</a>
</form>
