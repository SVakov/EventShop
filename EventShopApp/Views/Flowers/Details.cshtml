@model EventShopApp.ViewModels.FlowerViewModel

<head>
    <link href="~/css/product-details.css" rel="stylesheet" />
</head>

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6 text-center">
            <img src="@Model.FlowerImageUrl" alt="@Model.FlowerType" class="detail-image" />
        </div>

        <div class="col-md-6">
            <h2 class="detail-title">@Model.FlowerType</h2>
            <p class="detail-description">@Model.Description</p>
            <p class="detail-price"><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p class="detail-stock"><strong>Quantity in Stock:</strong> @Model.FlowerQuantity</p>
        </div>

    </div>
</div>
