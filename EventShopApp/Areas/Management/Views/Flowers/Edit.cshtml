@model EventShopApp.Models.Flower

<h2>Edit Flower</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="FlowerType">Name</label>
        <input asp-for="FlowerType" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label for="FlowerQuantity">Quantity</label>
        <input asp-for="FlowerQuantity" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="FlowerImageUrl">Image URL</label>
        <input asp-for="FlowerImageUrl" class="form-control" type="url" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
